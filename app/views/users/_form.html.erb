<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <p id="alert" class="text-danger text-left" >Błędne dane!</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :first_name, class: 'form-control',id: 'password_confirmation',placeholder: 'Imię' %>
  </div>

  <div class="form-group">
    <%= form.text_field :last_name, class: 'form-control',id: 'password_confirmation',placeholder: 'Nazwisko' %>
  </div>

  <div class="form-group">
    <%= form.text_field :email, class: 'form-control',id: 'password_confirmation',placeholder: 'E-mail' %>
  </div>

  <div class="form-group">
    <%= form.password_field :password, class: 'form-control',id: 'password_confirmation',placeholder: 'Hasło' %>
  </div>

  <div class="form-group">
    <%= form.password_field :password_confirmation, class: 'form-control',id: 'password_confirmation',placeholder: 'Powtórz hasło' %>
  </div>

  <div class="actions">
    <%= form.submit "Zatwierdź", class: "btn btn-success " %>
  </div>
<% end %>


